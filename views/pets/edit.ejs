<h1>Chỉnh sửa <%= pet.name %></h1>
<form action="/pets/<%= pet._id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label class="form-label">Tên</label>
    <input type="text" name="name" value="<%= pet.name %>" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Tuổi</label>
    <input type="number" name="age" value="<%= pet.age %>" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Loại</label>
    <input type="text" name="type" value="<%= pet.type %>" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Giống</label>
    <input type="text" name="breed" value="<%= pet.breed %>" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Chiều cao (cm)</label>
    <input type="number" name="height" value="<%= pet.height %>" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Cân nặng (kg)</label>
    <input type="number" name="weight" value="<%= pet.weight %>" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Màu sắc</label>
    <input type="text" name="color" value="<%= pet.color %>" class="form-control" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Tiêm vắc-xin</label>
    <select name="vaccinated" class="form-select" required>
      <option value="Chưa tiêm" <%= pet.vaccinated === 'Chưa tiêm' ? 'selected' : '' %>>Chưa tiêm</option>
      <option value="Đã tiêm" <%= pet.vaccinated === 'Đã tiêm' ? 'selected' : '' %>>Đã tiêm</option>
    </select>
  </div>
  <div class="mb-3">
    <label class="form-label">Trạng thái</label>
    <select name="status" class="form-select" required>
      <option value="Chưa bán" <%= pet.status === 'Chưa bán' ? 'selected' : '' %>>Chưa bán</option>
      <option value="Đã bán" <%= pet.status === 'Đã bán' ? 'selected' : '' %>>Đã bán</option>
      <option value="Đã được đặt trước" <%= pet.status === 'Đã được đặt trước' ? 'selected' : '' %>>Đã được đặt trước</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>